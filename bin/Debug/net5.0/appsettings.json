{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
       }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": ""
  },
  "Smtp": {
    "Port": 25,
    "Security": "None",
    "Sender":   "Scadenzario <noreply@example.org>"
  },
  "MemoryCache":{
    "SizeLimit":1000
  },
  "ResponseCache": {
    "Home": {
        "Duration": 60,
        "Location": "Client",
        "VaryByQueryKeys": ["page"]
    }
  },
    "Scadenze": {
      "PerPage": 10,
      "Order": {
              "By": "DataScadenza",
              "Ascending": false,
      "Allow": ["DataScadenza", "Beneficiario","Importo"]
      }
  },
  "Beneficiari": {
    "PerPage": 1,
    "Order": {
            "By": "Beneficiario",
            "Ascending": false,
    "Allow": ["Beneficiario", "Descrizione"]
    }
  }
}