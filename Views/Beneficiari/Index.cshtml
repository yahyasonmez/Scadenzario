@model BeneficiarioListViewModel
    <br>
    <br>
    <div class="alert alert-success">
        <h2><b>@ViewData["Title"]</b></h2>
    </div>
    <br>
    <div class="row">
        <div class="col-md-3">
             <a class="btn btn-primary btn-lg btn-block" asp-action="Create" asp-controller="Beneficiari"><i class="fas fa-plus-circle"></i>Nuovo Beneficiario</a>
        </div>
        <div class="col-md-9 d-flex flex-row-reverse">
            <form asp-controller="Beneficiari" asp-action="Index" method="GET">
                <div class="input-group">
                    <b>Beneficiario</b>&nbsp&nbsp&nbsp  <input type="text" name="search" placeholder="Cerca ....">
                       <div class="input-group-append">
                            <button class="input-group-text"><i class="fas fa-search"></i></button>
                      </div> 
                </div>
            </form>
        </div>
    </div>
    <br>
    <br>
    <div class="table-responsive-md">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"><a asp-route-orderby="Beneficiario" asp-route-search="@Model.Input.Search" asp-route-ascending="@(Model.Input.OrderBy=="Beneficiario" ? !Model.Input.Ascending:true)">Beneficiario @if(Model.Input.OrderBy=="Beneficiario"){<i class="fas fa-caret-@(Model.Input.Ascending ? "up":"down")"></i>}</a></th>
                    <th scope="col"><a asp-route-orderby="Descrizione" asp-route-ascending="@(Model.Input.OrderBy=="Descrizione" ? !Model.Input.Ascending:true)" asp-route-search="@Model.Input.Search">Descrizione @if(Model.Input.OrderBy=="Descrizione"){<i class="fas fa-caret-@(Model.Input.Ascending ? "up":"down")"></i>}</a></th>
                    <th scope="col">Email</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Sito Web</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Beneficiari)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Beneficiario)
                        </td>
                        <td>
                           @Html.DisplayFor(modelItem => item.Descrizione)
                        </td>
                        <td>
                           @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                           @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                           <a href="@Html.DisplayFor(modelItem => item.SitoWeb)">@Html.DisplayFor(modelItem => item.SitoWeb)</a>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <a class="btn btn-outline-primary" asp-action="Detail" asp-controller="Beneficiari" asp-route-id = "@item.IDBeneficiario">Dettaglio</a>
                            </div>
                        </td>
                    </tr>
               }
            </tbody>
        </table>
    </div>
     <br>
    <br>
    <nav aria-label="Paginazione">
        <ul class="pagination d-flex justify-content-center mt-3">
            <li class="page-item active" aria-current="page">
                <a class="page-link" asp-route-page="1">Page 1</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-route-page="2">Page 2</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-route-page="3">Page 3</a>
            </li>
        </ul>
    </nav>       
                
            

