@model BeneficiarioListViewModel
    <br>
    <br>
    <div class="alert alert-success">
        <h2><b>@ViewData["Title"]</b></h2>
    </div>
    <br>
    @if(TempData["Message"] != null)
    {
         <div class="alert alert-info">
             <h5>@TempData["Message"]</h5>
         </div>
    }
    <br>
    <div class="row">
        <div class="col-md-3">
              <a class="btn btn-outline-primary btn-sm" asp-action="Create" asp-controller="Beneficiari"><i class="fas fa-plus-circle"></i>  Nuovo Beneficiario</a>
        </div>
        <div class="col-md-9 d-flex flex-row-reverse">
            <form asp-controller="Beneficiari" asp-action="Index" method="GET">
                <div class="input-group">
                    <b>Beneficiario</b>&nbsp&nbsp&nbsp  <input type="text" name="search" placeholder="Cerca ...." value="@Model.Input.Search">
                       <div class="input-group-append">
                            <button class="input-group-text"><i class="fas fa-search"></i></button>
                      </div> 
                </div>
            </form>
        </div>
    </div>
    <br>
    <br>
    <div class="table-responsive-md">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"><order-link-beneficiario order-by="Beneficiario" Input="@Model.Input">Beneficiario</order-link-beneficiario></th>
                    <th scope="col"><order-link-beneficiario order-by="Descrizione" Input="@Model.Input">Descrizione</order-link-beneficiario></th>
                    <th scope="col">Email</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Sito Web</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Beneficiari.Results)
                {
                     <partial name="Beneficiari/_BeneficiarioLine" model=@item></partial>
                }
            </tbody>
        </table>
    </div>
   <br>
   <br>
    <vc:pagination-bar model="@Model"></vc:pagination-bar>
                
            

