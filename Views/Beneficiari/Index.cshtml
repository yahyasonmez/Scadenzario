@model List<BeneficiarioViewModel>
    <br>
    <br>
    <div class="alert alert-success">
        <h2><b>@ViewData["Title"]</b></h2>
    </div>
    <br>
    <div class="row">
        <div class="col-md-4">
             <a class="btn btn-primary btn-lg btn-block" asp-action="Create" asp-controller="Beneficiari"><i class="fas fa-plus-circle"></i>Crea nuovo beneficiario</a>
        </div>
        <div class="col-md-8">
            
        </div>
    </div>
    <br>
    <br>
    <div class="table-responsive-md">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Beneficiario</th>
                    <th scope="col">Descrizione</th>
                    <th scope="col">Email</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Sito Web</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var beneficiario in Model)
                {
                    <tr>
                        <td>
                            @beneficiario.Beneficiario
                        </td>
                        <td>
                            @beneficiario.Descrizione
                        </td>
                        <td>
                            @beneficiario.Email
                        </td>
                        <td>
                            @beneficiario.Telefono
                        </td>
                        <td>
                            @beneficiario.SitoWeb
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <a class="btn btn-outline-primary" asp-action="Detail" asp-controller="Beneficiari" asp-route-id = "@beneficiario.IDBeneficiario">Dettaglio</a>
                            </div>
                        </td>
                    </tr>
               }
            </tbody>
        </table>
    </div>
            
                
            

