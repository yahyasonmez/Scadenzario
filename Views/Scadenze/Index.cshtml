@model List<ScadenzaViewModel>
<br>
    <br>
    <div class="alert alert-success">
        <h2><b>@ViewData["Title"]</b></h2>
    </div>
    <br>
    <div class="row">
        <div class="col-md-3">
             <a class="btn btn-primary btn-lg btn-block" asp-action="Create" asp-controller="Scadenze"><i class="fas fa-plus-circle"></i>Nuova Scadenza</a>
        </div>
        <div class="col-md-9">
            
        </div>
    </div>
    <br>
    <br>
    <div class="table-responsive-md">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Beneficiario</th>
                    <th scope="col">Data Scadenza</th>
                    <th scope="col">Importo</th>
                    <th scope="col">Sollecito</th>
                    <th scope="col">Giorni Ritardo</th>
                    <th scope="col">Data Pagamento</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var scadenza in Model)
                {
                    <tr>
                        <td>
                            @scadenza.Beneficiario
                        </td>
                        <td>
                            @scadenza.DataScadenza
                        </td>
                        <td>
                            @scadenza.Importo
                        </td>
                        <td>
                            @scadenza.Sollecito
                        </td>
                        <td>
                            @scadenza.GiorniRitardo
                        </td>
                        <td>
                            @scadenza.DataPagamento
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <a class="btn btn-outline-primary" asp-action="Detail" asp-controller="Scadenze" asp-route-id = "@scadenza.IDScadenza">Dettaglio</a>
                            </div>
                        </td>
                    </tr>
               }
            </tbody>
        </table>
    </div>
            
                
            

