@model ScadenzaListViewModel
<br>
    <br>
    <div class="row">
        <div class="alert alert-success col-md-12">
            <h2><b>@ViewData["Title"]</b></h2>
            <br>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-3">
             <a class="btn btn-outline-primary btn-lg" asp-action="Create" asp-controller="Scadenze"><i class="fas fa-plus-circle"></i>  Nuova Scadenza</a>
        </div>
         <div class="col-md-9 d-flex flex-row-reverse">
            <form asp-controller="Scadenze" asp-action="Index" method="GET">
                <div class="input-group">
                    <b>Beneficiario/Data scadenza</b>&nbsp&nbsp&nbsp  <input type="text" name="search" placeholder="Cerca ...." value="@Model.Input.Search">
                       <div class="input-group-append">
                            <button class="input-group-text"><i class="fas fa-search"></i></button>
                      </div> 
                </div>
            </form>
        </div>
    </div>
    <br>
    <br>
    
    <br>
    <div class="table-responsive-md">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"><a asp-route-orderby="Beneficiario" asp-route-search="@Model.Input.Search" asp-route-ascending="@(Model.Input.OrderBy=="Beneficiario" ? !Model.Input.Ascending:true)">Beneficiario @if(Model.Input.OrderBy=="Beneficiario"){<i class="fas fa-caret-@(Model.Input.Ascending ? "up":"down")"></i>}</a></th>
                    <th scope="col"><a asp-route-orderby="DataScadenza" asp-route-ascending="@(Model.Input.OrderBy=="DataScadenza" ? !Model.Input.Ascending:true)" asp-route-search="@Model.Input.Search">Data Scadenza @if(Model.Input.OrderBy=="DataScadenza"){<i class="fas fa-caret-@(Model.Input.Ascending ? "up":"down")"></i>}</a></th>
                    <th scope="col"><a asp-route-orderby="Importo" asp-route-ascending="@(Model.Input.OrderBy=="Importo" ? !Model.Input.Ascending:true)" asp-route-search="@Model.Input.Search">Importo @if(Model.Input.OrderBy=="Importo"){<i class="fas fa-caret-@(Model.Input.Ascending ? "up":"down")"></i>}</a></th>
                    <th scope="col">Sollecito</th>
                    <th scope="col">Giorni Mancanti/Ritardo</th>
                    <th scope="col">Data Pagamento</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Scadenze.Results)
                {
                    <tr>
                        <td>
                             @Html.DisplayFor(modelItem => item.Beneficiario)
                        </td>
                        <td>
                           @Html.DisplayFor(modelItem => item.DataScadenza)
                        </td>
                        <td>
                           @Html.DisplayFor(modelItem => item.Importo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sollecito)
                        </td>
                        <td>
                            @if (item.GiorniRitardo < 0)
                            {
                                int appoggio = @Math.Abs((int)item.GiorniRitardo);
                                <font color="ff0000">
                                @{
                                    @appoggio
                                }
                                </font>
                            }
                            else
                            {
                                   @Html.DisplayFor(modelItem => item.GiorniRitardo)
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataPagamento)
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <a class="btn btn-outline-primary" asp-action="Detail" asp-controller="Scadenze" asp-route-id = "@item.IDScadenza">Dettaglio</a>
                            </div>
                        </td>
                    </tr>
               }
            </tbody>
        </table>
    </div>
    <br>
    <br>
    @{
        int TotalPage = (int)Math.Ceiling(Model.Scadenze.TotalCount / (decimal) Model.Input.Limit);
        int currentPage = Model.Input.Page;
    }
    <nav aria-label="Paginazione">
        <ul class="pagination d-flex justify-content-center mt-3">
            @if(currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page=@(currentPage-1)><i class="fas fa-angle-left"></i></a>
                </li>
            }
            @for(int p = Math.Max(1,currentPage-4); p <= Math.Min(TotalPage,currentPage + 4);p++)
            {
                if(p==currentPage)
                {
                     <li class="page-item active" aria-current="page">
                        <a class="page-link" asp-route-page=@p>@p</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                       <a class="page-link" asp-route-page=@p>@p</a>
                    </li>
                }
            }
            @if(currentPage < TotalPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page=@(currentPage+1)><i class="fas fa-angle-right"></i></a>
                </li>
            }
        </ul>
    </nav>
            
                
            

