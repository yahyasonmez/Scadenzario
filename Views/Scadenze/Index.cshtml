@model ScadenzaListViewModel
<br>
    <br>
    <div class="row">
        <div class="alert alert-success col-md-12">
            <h2><b>@ViewData["Title"]</b></h2>
            <br>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-3">
             <a class="btn btn-outline-primary btn-sm" asp-action="Create" asp-controller="Scadenze"><i class="fas fa-plus-circle"></i>  Nuova Scadenza</a>
        </div>
         <div class="col-md-9 d-flex flex-row-reverse">
            <form asp-controller="Scadenze" asp-action="Index" method="GET">
                <div class="input-group">
                    <b>Beneficiario/Data scadenza</b>&nbsp&nbsp&nbsp  <input type="text" name="search" placeholder="Cerca ...." value="@Model.Input.Search">
                       <div class="input-group-append">
                            <button class="input-group-text"><i class="fas fa-search"></i></button>
                      </div> 
                </div>
            </form>
        </div>
    </div>
    <br>
    <br>
    
    <br>
    <div class="table-responsive-md">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"><order-link-scadenza order-by="Beneficiario" Input="@Model.Input">Beneficiario</order-link-scadenza></th>
                    <th scope="col"><order-link-scadenza order-by="DataScadenza" Input="@Model.Input">Data Scadenza</order-link-scadenza></th>
                    <th scope="col"><order-link-scadenza order-by="Importo" Input="@Model.Input">Importo</order-link-scadenza></th>
                    <th scope="col">Sollecito</th>
                    <th scope="col">Giorni Mancanti/Ritardo</th>
                    <th scope="col">Data Pagamento</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Scadenze.Results)
                {
                   <partial name="Scadenze/_ScadenzaLine" model=@item></partial>
                }
            </tbody>
        </table>
    </div>
    <br>
    <br>
    <vc:pagination-bar model="@Model"></vc:pagination-bar>
            
                
            

